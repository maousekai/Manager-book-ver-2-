<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox prefWidth="550.0" spacing="15" styleClass="popup-card"
      xmlns="http://javafx.com/javafx/17" 
      xmlns:fx="http://javafx.com/fxml/1"> 
    <padding>
        <Insets top="20" right="30" bottom="30" left="30"/>
    </padding>
    
    <Text text="Thông tin Nhân viên Mới" 
          style="-fx-font-size: 22px; -fx-font-weight: 700;"/>
    
    <Separator/>

    <GridPane hgap="10" vgap="10" styleClass="grid-pane-form">
        <Label text="Họ và Tên:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" styleClass="input-field" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        
        <Label text="Ngày sinh:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dobPicker" styleClass="input-field" maxWidth="Infinity" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        
        <Label text="Địa chỉ:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="addressField" styleClass="input-field" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        
        <Label text="Số điện thoại:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="phoneField" styleClass="input-field" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        
        <Label text="Tài khoản:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="usernameField" promptText="Dùng để đăng nhập" styleClass="input-field" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        
        <Label text="Mật khẩu:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <PasswordField fx:id="passwordField" promptText="Mật khẩu đăng nhập" styleClass="input-field" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
        
        <Label text="Vị trí:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <ComboBox fx:id="roleCombo" styleClass="input-field" maxWidth="Infinity" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

    </GridPane>
    
    <Separator/>
    
    <HBox spacing="10" alignment="CENTER_RIGHT">
         <Button text="Hủy" onAction="#handleCancelAdd" styleClass="button-secondary"/>
         <Button text="Lưu Nhân viên" onAction="#handleAddEmployee" styleClass="button-primary" prefHeight="40.0"/>
    </HBox>
</VBox>