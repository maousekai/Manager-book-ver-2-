<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/17" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.bookstore.controller.SanPhamController">

    <left>
        <VBox styleClass="card" prefWidth="250" spacing="10">
            <padding>
                <Insets top="10" right="15" bottom="10" left="15"/>
            </padding>
            <Text text="Bộ lọc" style="-fx-font-size: 18px; -fx-font-weight: 700;"/>
            
            <TextField fx:id="searchField" promptText="Tìm theo tên sản phẩm..." 
                       styleClass="input-field"/>
            
            <Accordion VBox.vgrow="ALWAYS">
                <panes>
                    <TitledPane text="Sách Theo Thể Loại" expanded="true">
                        <ListView fx:id="categoryListView" />
                    </TitledPane>
                    <TitledPane text="Văn Phòng Phẩm">
                        <ListView fx:id="vppCategoryListView" />
                    </TitledPane>
                </panes>
            </Accordion>
            
            <Button text="Tất cả sản phẩm" onAction="#handleClearFilters" 
                    maxWidth="Infinity" styleClass="button-secondary"/>
        </VBox>
    </left>

    <center>
        <BorderPane>
            <top>
                <HBox alignment="CENTER_LEFT" spacing="20">
                    <padding>
                        <Insets top="10" right="20" bottom="10" left="20"/>
                    </padding>
                    <Text text="Danh sách sản phẩm" 
                          style="-fx-font-size: 28px; -fx-font-weight: 700;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button fx:id="importStockButton" text="Nhập kho / Thêm Sản Phẩm Mới" 
                            onAction="#handleImportStock" 
                            styleClass="button-primary" prefHeight="40.0"/>
                </HBox>
            </top>
            
            <center>
                <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-border-color: transparent;">
                    <content>
                        <TilePane fx:id="productTilePane" hgap="20" vgap="20" 
                                  style="-fx-background-color: transparent;">
                            <padding>
                                <Insets top="10" right="20" bottom="20" left="20"/>
                            </padding>
                        </TilePane>
                    </content>
                </ScrollPane>
            </center>
        </BorderPane>
    </center>

</BorderPane>