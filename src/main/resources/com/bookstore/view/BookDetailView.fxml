<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="600.0" prefWidth="800.0" stylesheets="@styles.css"
            xmlns="http://javafx.com/javafx/17" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.bookstore.controller.BookDetailController">
    <center>
        <HBox spacing="30">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>
            
            <VBox alignment="TOP_CENTER" spacing="15" prefWidth="250">
                <ImageView fx:id="bookImageView" fitWidth="250" fitHeight="375" 
                           preserveRatio="true" styleClass="book-image-detail"/>
                <Label fx:id="saleOffLabel" text="GIẢM 10%" 
                       style="-fx-font-weight: bold; -fx-text-fill: red;"/>
            </VBox>

            <VBox spacing="10" HBox.hgrow="ALWAYS">
                <Text fx:id="titleLabel" text="Tên Sách" 
                      style="-fx-font-size: 28px; -fx-font-weight: 700;" 
                      wrappingWidth="450"/>
                
                <Label fx:id="authorLabel" text="Tác giả: (Tên tác giả)" 
                       style="-fx-font-size: 16px; -fx-text-fill: #1976D2;"/>
                
                <Label fx:id="priceLabel" text="99,000 VND" 
                       style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #D32F2F;"/>
                
                <Separator/>
                
                <GridPane hgap="10" vgap="8" style="-fx-font-size: 14px;">
                    <Label text="Thể loại:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                    <Label fx:id="genreLabel" text="(Thể loại)" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                    
                    <Label text="NXB:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                    <Label fx:id="publisherLabel" text="(NXB)" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                    
                    <Label text="Năm XB:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                    <Label fx:id="yearLabel" text="2023" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                    
                    <Label text="Vị trí:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                    <Label fx:id="locationLabel" text="A1-B2-C3" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                </GridPane>
                
                <Separator/>
                
                <Text text="Mô tả:" style="-fx-font-weight: bold; -fx-font-size: 16px;"/>
                <TextArea fx:id="descriptionArea" editable="false" prefHeight="120" wrapText="true"/>

                <HBox spacing="15" alignment="CENTER_LEFT">
                    <Button text="Thêm vào giỏ hàng" onAction="#handleAddToCart" 
                            styleClass="button-primary" prefHeight="40"/>
                    <Button text="Đóng" onAction="#handleClose" 
                            styleClass="button-secondary" prefHeight="40"/>
                </HBox>
            </VBox>
        </HBox>
    </center>
</BorderPane>