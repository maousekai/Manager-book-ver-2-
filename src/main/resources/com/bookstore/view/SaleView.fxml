<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/17" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.bookstore.controller.SaleController">

    <left>
        <VBox styleClass="card" prefWidth="250" spacing="10">
            <padding>
                <Insets top="10" right="15" bottom="10" left="15"/>
            </padding>
            <Text text="Bộ lọc" style="-fx-font-size: 18px; -fx-font-weight: 700;"/>
            
            <TextField fx:id="searchField" promptText="Tìm theo tên sách..." 
                       styleClass="input-field"/>
            
            <Accordion VBox.vgrow="ALWAYS">
                <panes>
                    <TitledPane text="Sách Theo Thể Loại" expanded="true">
                        <ListView fx:id="categoryListView" />
                    </TitledPane>
                    
                    <TitledPane text="Văn Phòng Phẩm">
                        <ListView fx:id="vppCategoryListView" />
                    </TitledPane>
                </panes>
            </Accordion>
            <Button text="Tất cả sản phẩm" onAction="#handleClearFilters" 
                    maxWidth="Infinity" styleClass="button-secondary"/>
        </VBox>
    </left>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-border-color: transparent;">
            <content>
                <TilePane fx:id="bookTilePane" hgap="20" vgap="20" 
                          style="-fx-background-color: transparent;">
                    <padding>
                        <Insets top="10" right="20" bottom="20" left="20"/>
                    </padding>
                </TilePane>
            </content>
        </ScrollPane>
    </center>

    <right>
        <VBox styleClass="card" prefWidth="300" spacing="15">
            <padding>
                <Insets top="10" right="20" bottom="20" left="20"/>
            </padding>
            <Text text="Giỏ hàng" style="-fx-font-size: 18px; -fx-font-weight: 700;"/>
            
            <ListView fx:id="cartListView" prefHeight="400.0"/>
            
            <Separator/>
            
            <VBox spacing="5">
                <HBox>
                    <Label text="Tổng cộng:" style="-fx-font-weight: 600;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="totalLabel" text="0 VND" 
                           style="-fx-font-weight: 700; -fx-font-size: 16px;"/>
                </HBox>
                <Label fx:id="discountLabel" text="Khuyến mãi: 0 VND" 
                       style="-fx-text-fill: #D32F2F;"/> </VBox>
            
            <Button fx:id="checkoutButton" text="Thanh toán" onAction="#handleCheckout" 
                    styleClass="button-primary" maxWidth="Infinity" prefHeight="45.0"/>
            <Button fx:id="clearCartButton" text="Xóa giỏ hàng" onAction="#handleClearCart" 
                    styleClass="button-secondary" maxWidth="Infinity"/>
        </VBox>
    </right>
</BorderPane>