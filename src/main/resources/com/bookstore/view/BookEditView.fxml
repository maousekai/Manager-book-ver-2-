<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextArea?>

<VBox prefWidth="650.0" spacing="15" styleClass="popup-card"
      xmlns="http://javafx.com/javafx/17" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.bookstore.controller.SachEditController">
    <padding>
        <Insets top="20" right="30" bottom="30" left="30"/>
    </padding>
    
    <Text fx:id="titleText" text="Sửa chi tiết Sách" 
          style="-fx-font-size: 22px; -fx-font-weight: 700;"/>
    <Separator/>

    <GridPane hgap="10" vgap="8" styleClass="grid-pane-form">
        <Label text="Tên sản phẩm:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" styleClass="input-field" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        
        <Label text="Giá bán:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="priceField" styleClass="input-field" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Khuyến Mãi:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <HBox spacing="5" GridPane.rowIndex="2" GridPane.columnIndex="1">
            <TextField fx:id="promotionField" promptText="VD: GIAM_10" styleClass="input-field" HBox.hgrow="ALWAYS"/>
            <Button text="Xóa" onAction="#handleClearPromotion" styleClass="button-secondary" style="-fx-font-size: 10px;"/>
        </HBox>

        <Label text="Số lượng tồn kho :" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="stockField" styleClass="input-field" GridPane.rowIndex="3" GridPane.columnIndex="1" disable="true" promptText="Chỉ có thể thay đổi bằng 'Nhập kho'"/>
        
        <Label text="Tên file ảnh:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <HBox spacing="10" GridPane.rowIndex="4" GridPane.columnIndex="1">
            <TextField fx:id="imageField" styleClass="input-field" HBox.hgrow="ALWAYS" 
               editable="true" promptText="Chọn ảnh từ nút bên cạnh..."/>
            <Button fx:id="chooseImageButton" text="Chọn Ảnh" onAction="#handleChooseImage" 
            styleClass="button-secondary"/>
        </HBox>
    </GridPane>
    
    <VBox fx:id="bookFieldsBox" spacing="8">
        <GridPane hgap="10" vgap="8" styleClass="grid-pane-form">
            <Label text="Nhà Xuất Bản:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <ComboBox fx:id="publisherComboBox" maxWidth="Infinity" styleClass="input-field" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            
            <Label text="Năm XB:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="yearField" styleClass="input-field" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            
            <Label text="Mô tả:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextArea fx:id="descriptionArea" prefRowCount="3" wrapText="true" styleClass="input-field" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        </GridPane>
    </VBox>

    <Separator/>
    
    <HBox spacing="10" alignment="CENTER_RIGHT">
         <Button text="Hủy" onAction="#handleCancel" styleClass="button-secondary"/>
         <Button fx:id="saveButton" text="Lưu Thay đổi" onAction="#handleSave" styleClass="button-primary" prefHeight="40.0"/>
    </HBox>
</VBox>