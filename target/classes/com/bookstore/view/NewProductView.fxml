<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox prefWidth="650.0" spacing="15" styleClass="popup-card"
      xmlns="http://javafx.com/javafx/17" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.bookstore.controller.NewProductController">
    <padding>
        <Insets top="20" right="30" bottom="30" left="30"/>
    </padding>
    
    <Text text="Thêm Sản Phẩm Mới" 
          style="-fx-font-size: 22px; -fx-font-weight: 700;"/>
    
    <Separator/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Loại sản phẩm:" style="-fx-font-weight: 600;"/>
        <ToggleButton fx:id="bookToggle" text="Sách"/>
        <ToggleButton fx:id="vppToggle" text="Văn Phòng Phẩm"/>
    </HBox>
    
    <GridPane hgap="10" vgap="8">
        <Label text="Tên sản phẩm:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" styleClass="input-field" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        
        <Label text="Giá bán:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="priceField" promptText="ví dụ: 89000" styleClass="input-field" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        
        <Label text="Số lượng nhập:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="stockField" promptText="Số lượng ban đầu" styleClass="input-field" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        
        <Label text="Tên file ảnh:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
			<HBox spacing="10" GridPane.rowIndex="3" GridPane.columnIndex="1">
    <TextField fx:id="imageField" styleClass="input-field" HBox.hgrow="ALWAYS" 
       editable="true" promptText="Chọn ảnh từ nút bên cạnh..."/>
    <Button fx:id="chooseImageButton" text="Chọn Ảnh" onAction="#handleChooseImage" 
    styleClass="button-secondary"/>
				</HBox>
    </GridPane>
    <Label fx:id="statusLabel" managed="false" visible="false" 
           style="-fx-font-weight: bold; -fx-text-fill: #1976D2;"/>
    
    <VBox fx:id="bookFieldsBox" spacing="8" managed="false" visible="false">
        <Text text="Chi tiết Sách" style="-fx-font-weight: 600;"/>
        <GridPane hgap="10" vgap="8">
            <Label text="Nhà Xuất Bản:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <ComboBox fx:id="publisherComboBox" maxWidth="Infinity" styleClass="input-field" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <VBox fx:id="newPublisherBox" managed="false" visible="false" GridPane.rowIndex="1" GridPane.columnIndex="1">
                 <TextField fx:id="newPublisherField" promptText="Nhập tên NXB mới..." styleClass="input-field"/>
            </VBox>
            
            <Label text="Thể loại:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <ComboBox fx:id="genreComboBox" maxWidth="Infinity" styleClass="input-field" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            <VBox fx:id="newGenreBox" managed="false" visible="false" GridPane.rowIndex="3" GridPane.columnIndex="1">
                 <TextField fx:id="newGenreField" promptText="Nhập tên Thể loại mới..." styleClass="input-field"/>
            </VBox>

            <Label text="Năm XB:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="yearField" promptText="ví dụ: 2018" styleClass="input-field" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            
            <Label text="Mô tả:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
            <TextArea fx:id="descriptionArea" prefRowCount="3" wrapText="true" styleClass="input-field" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
        </GridPane>
    </VBox>
    
    <VBox fx:id="vppFieldsBox" spacing="8" managed="false" visible="false">
        <Text text="Chi tiết Văn Phòng Phẩm" style="-fx-font-weight: 600;"/>
        <GridPane hgap="10" vgap="8">
            <Label text="Nhà cung cấp:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <ComboBox fx:id="supplierComboBox" maxWidth="Infinity" styleClass="input-field" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <VBox fx:id="newSupplierBox" managed="false" visible="false" GridPane.rowIndex="1" GridPane.columnIndex="1">
                 <TextField fx:id="newSupplierField" promptText="Nhập tên NCC mới..." styleClass="input-field"/>
            </VBox>

            <Label text="Ghi chú:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextArea fx:id="notesArea" prefRowCount="3" wrapText="true" styleClass="input-field" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
        </GridPane>
    </VBox>

    <Separator/>
    
    <Button fx:id="saveButton" text="Lưu Sản Phẩm" onAction="#handleSave" 
            styleClass="button-primary" maxWidth="Infinity" prefHeight="45.0"/>
</VBox>